<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base keypad style -->
    <style name="KeyBtnBase" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KeyBtnWhite" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KeyBtnYellow" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KeyBtnBlue" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KeyBtnRed" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/background_white</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- FAB Create Button Style -->
    <style name="Widget.App.FAB.Create" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="backgroundTint">@color/primary_yellow</item>
        <item name="tint">@color/black</item>
        <item name="maxImageSize">32dp</item>
        <item name="elevation">6dp</item>
    </style>

</resources>
