<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base keypad style -->
    <style name="KeyBtnBase" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KeyBtnWhite" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KeyBtnYellow" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KeyBtnBlue" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KeyBtnRed" parent="KeyBtnBase">
        <item name="android:background">@drawable/key_btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
