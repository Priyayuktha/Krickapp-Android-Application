<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Match"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Match Name -->
    <TextView
        android:id="@+id/tvMatchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Name"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/etMatchName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="e.g., Friendly T20"
        android:backgroundTint="@color/border_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvMatchName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Venue -->
    <TextView
        android:id="@+id/tvVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/etMatchName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etVenue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Enter venue name"
        android:backgroundTint="@color/border_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvVenue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date and Time -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/etVenue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Select Date"
        android:backgroundTint="@color/border_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:focusable="false"
        android:clickable="true"
        android:cursorVisible="false"
        android:inputType="none"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etTime"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.48"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Select Time"
        android:backgroundTint="@color/border_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:focusable="false"
        android:clickable="true"
        android:cursorVisible="false"
        android:inputType="none"
        app:layout_constraintTop_toTopOf="@id/etDate"
        app:layout_constraintStart_toEndOf="@id/etDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"/>

    <!-- Match Type -->
    <TextView
        android:id="@+id/tvMatchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Type"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etMatchType"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Select match type (e.g., T20, ODI)"
        android:backgroundTint="@color/border_gray"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvMatchType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/etMatchType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        android:layout_marginTop="32dp"
        app:layout_constraintWidth_percent="0.45"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Next"
        android:backgroundTint="@color/primary_yellow"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btnCancel"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"/>

</androidx.constraintlayout.widget.ConstraintLayout>
