<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Main vertical column -->
    <LinearLayout
        android:id="@+id/col"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Title at top (visible a bit below the status bar) -->
        <TextView
            android:id="@+id/tvMatchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Result"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"/>


        <!-- horizontal divider under title -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Content block (we use margins so it sits roughly in the lower area above nav) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top"
                android:paddingTop="18dp"
                android:paddingBottom="12dp">

                <!-- "Who won the match?" - left aligned relative to content area -->
                <TextView
                    android:id="@+id/tvWho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Who won the match?"
                    android:textSize="16sp"
                    android:textColor="#444"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <!-- Team buttons row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="18dp">

                    <!-- Blue team button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTeam1"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_team_blue"
                        android:text="Team 1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:includeFontPadding="false" />

                    <!-- Yellow team button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTeam2"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_team_yellow"
                        android:text="Team 2"
                        android:textSize="18sp"
                        android:textStyle="bold|italic"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:includeFontPadding="false" />
                </LinearLayout>

                <!-- Checkboxes: left aligned and evenly spaced -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbNRR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Consider all overs for NRR calculation"
                        android:buttonTint="#1976D2"
                        android:layout_marginBottom="10dp" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbDraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Drawn"
                        android:buttonTint="#1976D2"
                        android:layout_marginBottom="10dp" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbAbandoned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Abandoned"
                        android:buttonTint="#1976D2" />
                </LinearLayout>

                <!-- Result info (disabled EditText with rounded bg) -->
                <EditText
                    android:id="@+id/etResultInfo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/result_box"
                    android:enabled="false"
                    android:hint="Team 1 won by 10 runs"
                    android:textColorHint="#666"
                    android:padding="10dp" />

                <!-- buttons row - Cancel (left) and OK (right) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp">

                    <!-- Cancel - white with black border -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="CANCEL"
                        android:textAllCaps="true"
                        android:background="@drawable/btn_cancel_border"
                        android:backgroundTint="@null"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp" />

                    <!-- OK - yellow pill -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOk"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="OK"
                        android:background="@drawable/btn_ok_yellow"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Bottom Navigation (fixed at bottom) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        style="@style/Widget.App.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

    <!-- Floating Action Button centered above bottom nav -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create"
        style="@style/Widget.App.FAB.Create"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/bottom_nav"
        app:layout_anchorGravity="center"
        android:contentDescription="@string/create" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
