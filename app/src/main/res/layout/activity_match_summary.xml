<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MatchSummaryActivity">

    <!-- Main vertical column -->
    <LinearLayout
        android:id="@+id/col"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Title at top -->
        <TextView
            android:id="@+id/tvMatchSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>

        <!-- ScrollView for content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Match Result -->
                <TextView
                    android:id="@+id/tvMatchResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team 1 won by 14 runs"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Teams -->
                <TextView
                    android:id="@+id/tvTeamsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team 1 vs Team 2"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <!-- Player of the Match Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Player of the Match"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/tvPlayerOfMatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tim David"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- Team Selection Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <!-- Team 1 button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTeam1"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_team_yellow"
                        android:text="Team 1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:includeFontPadding="false" />

                    <!-- Team 2 button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTeam2"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_grey"
                        android:text="Team 2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:includeFontPadding="false" />
                </LinearLayout>

                <!-- Over Details List -->
                <LinearLayout
                    android:id="@+id/overDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Over 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1. Bowler D to Athena... 15 runs"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                        <!-- Ball sequence -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp">

                            <!-- Ball 1 - 6 runs (blue circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="6"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:background="@drawable/circle_blue"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 2 - 4 runs (green circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="4"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:background="@drawable/circle_green"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 3 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 4 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 5 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 6 - 2 runs (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                    <!-- Over 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2. Bowler D to Keon... 18 runs"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                        <!-- Ball sequence -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp">

                            <!-- Ball 1 - 4 runs (green circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="4"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:background="@drawable/circle_green"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 2 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 3 - Wicket (red circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="W"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:background="@drawable/circle_red"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 4 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 5 - 1 run (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"
                                android:layout_marginEnd="4dp"/>

                            <!-- Ball 6 - 2 runs (white circle) -->
                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/circle_white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Bottom Navigation (fixed at bottom) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        style="@style/Widget.App.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
