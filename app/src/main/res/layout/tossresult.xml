<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".tossresult">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvWhoWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_won_toss"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="24dp" />

            <!-- Teams Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnTeamA"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/team_a_button"
                    android:text=""
                    android:backgroundTint="@color/accent_blue"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="20dp"
                    app:cornerRadius="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vs"
                    android:textSize="18sp"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btnTeamB"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/team_b_button"
                    android:text=""
                    android:backgroundTint="@color/primary_yellow"
                    android:textColor="#000"
                    android:layout_marginStart="20dp"
                    app:cornerRadius="60dp" />
            </LinearLayout>

            <!-- Labels for Teams -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/team_a"
                    android:textSize="14sp"
                    android:textColor="#555" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/team_b"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <!-- Bat/Bowl title -->
            <TextView
                android:id="@+id/tvOpted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opted_for"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="24dp" />

            <!-- Bat / Bowl Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnBat"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="@string/bat"
                    android:backgroundTint="@color/accent_blue"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="20dp"
                    app:cornerRadius="60dp" />

                <Button
                    android:id="@+id/btnBowl"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text="@string/bowl"
                    android:backgroundTint="@color/primary_yellow"
                    android:textColor="#000"
                    app:cornerRadius="60dp" />
            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="@string/save"
                android:textStyle="bold"
                android:backgroundTint="@color/primary_yellow"
                android:textColor="#000"
                app:cornerRadius="30dp"
                android:layout_marginTop="40dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        style="@style/Widget.App.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

    <!-- FAB Center -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create"
        style="@style/Widget.App.FAB.Create"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/bottom_nav"
        app:layout_anchorGravity="center"
        android:contentDescription="@string/create" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
